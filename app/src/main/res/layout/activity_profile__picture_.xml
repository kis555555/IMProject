<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profinfobg"
    tools:context=".Profile_Picture_Activity">
    <ImageButton
        android:id="@+id/prof_backbtn"
        android:src="@drawable/profinfobackbtn"
        android:scaleType="centerCrop"
        android:padding="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <RelativeLayout
        android:id="@+id/prof_part"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_pic_circle"
            android:src="@drawable/defpropic"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:layout_width="250dp"
            android:layout_height="250dp" />

        <TextView
            android:id="@+id/prof_name"
            android:layout_marginTop="10dp"
            android:textColor="#707070"
            android:textAlignment="center"
            android:text="이름"
            android:textSize="40dp"
            android:layout_below="@id/profile_pic_circle"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/prof_membertype"
            android:textColor="#707070"
            android:text="회원구분"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_below="@id/prof_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/prof_nickname"
            android:textColor="#707070"
            android:textSize="15dp"
            android:text="닉네임"
            android:textAlignment="center"
            android:layout_below="@id/prof_membertype"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:id="@+id/prof_part_2"
        android:layout_below="@id/prof_part"
        android:layout_marginTop="80dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/profile_pic_change_btn"
            android:background="@android:color/transparent"
            android:src="@drawable/profpicchbtn"
            android:scaleType="centerInside"
            android:layout_alignParentStart="true"
            android:padding="0dp"
            android:layout_width="150dp"
            android:layout_height="70dp" />

        <ImageButton
            android:id="@+id/default_pic_btn"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/defapicbtn" />

    </RelativeLayout>

</RelativeLayout>